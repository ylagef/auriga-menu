---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="text-dark-text">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="m-0 h-screen relative bg-black z-10 p-2 flex flex-col overflow-y-auto">
    <div class="flex justify-center p-6">
      <img class="max-h-20 max-w-[70%] h-fit" src="/assets/images/auriga-logo.svg" alt="Auriga gastrobar logo" />
    </div>
    <main class="flex-grow">
      <slot />
    </main>

    <footer class="text-xs text-center py-4 text-white">
      <div class="w-fit m-auto opacity-80">
        <span class="font-semibold">RÃºa das Laxas, 4, 32005, Ourense</span>
        <div class="w-full flex justify-between">
          <span>09:00 - 00:30</span>
          <a href="tel:988 61 45 04">988 61 45 04</a>
        </div>
      </div>
    </footer>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800&display=swap');

      html {
        font-family: 'Montserrat', sans-serif;
      }

      body::before {
        content: '';
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        background-image: url('/assets/images/auriga-outside.jpeg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: opacity(0.5);
        z-index: -1;
      }

      * {
        box-sizing: border-box;
      }
    </style>
    <style is:global>
      h1 {
        font-size: 1.5rem;
        font-weight: 700;
      }
      h2 {
        font-size: 1.4rem;
        font-weight: 600;
      }
      h3 {
        font-size: 1.3rem;
        font-weight: 500;
      }
      h4 {
        font-size: 1.2rem;
        font-weight: 400;
      }

      p {
        font-size: 1rem;
        font-weight: 400;
      }
    </style>
  </body>
</html>
