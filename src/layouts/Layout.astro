---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>

    <footer class="text-xs text-center pt-8 pb-4">
      <div class="w-fit m-auto opacity-80">
        <span class="font-semibold">RÃºa das Laxas, 4, 32005, Ourense</span>
        <div class="w-full flex justify-between">
          <span>09:00 - 00:30</span>
          <a href="tel:988 61 45 04">988 61 45 04</a>
        </div>
      </div>
    </footer>
    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: #ffffff;
        --color-bg: #000000;
        --color-border: hsl(17, 24%, 90%);
      }

      html {
        font-family: system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
      }

      body {
        margin: 0;
        height: 100vh;
        position: relative;
        background-color: var(--color-bg);
        z-index: 1;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        overflow-y: scroll;
      }
      body::before {
        content: '';
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        background-image: url('../assets/images/auriga-outside.jpeg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: opacity(0.5);
        z-index: -1;
      }

      main {
        flex-grow: 1;
      }

      * {
        box-sizing: border-box;
      }
    </style>
  </body>
</html>
