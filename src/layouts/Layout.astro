---
import BurgerMenu from '@components/BurgerMenu'
import { HeadHrefLangs } from 'astro-i18next/components'
import i18next from 'i18next'

import { RESTAURANT } from '../mock/auriga'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang={i18next.language} class="text-dark-text">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <HeadHrefLangs />
  </head>
  <body class="m-0 h-screen relative bg-black z-10 p-2 flex flex-col overflow-y-auto">
    <BurgerMenu client:load />

    <div id="logo-container" class="flex justify-center p-6">
      <img class="max-h-20 max-w-[70%] h-fit" src={`/assets/images/${RESTAURANT.id}-logo.svg`} alt={`${RESTAURANT.name} logo`} />
    </div>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="text-xs text-center py-4 text-white">
      <div class="w-fit m-auto opacity-90">
        <span class="font-semibold">RÃºa das Laxas, 4, 32005, Ourense</span>
        <div class="w-full flex justify-between">
          <span>09:00 - 00:30</span>
          <a href="tel:988 61 45 04">988 61 45 04</a>
        </div>
      </div>
    </footer>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800&display=swap');

      html {
        font-family: 'Montserrat', sans-serif;
        font-size: 14px;
      }

      body::before {
        content: '';
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        background-image: url('/assets/images/auriga-outside.jpeg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: opacity(0.5);
        z-index: -1;
      }

      * {
        box-sizing: border-box;
      }
    </style>
    <style is:global>
      h1 {
        font-size: 1.6rem;
        font-weight: 700;
      }
      h2 {
        font-size: 1.4rem;
        font-weight: 600;
      }
      h3 {
        font-size: 1.3rem;
        font-weight: 500;
      }
      h4 {
        font-size: 1.2rem;
        font-weight: 400;
      }

      p {
        font-size: 1rem;
        font-weight: 400;
      }
      small {
        font-size: 0.9rem;
      }

      .menu {
        background-color: transparent;
        border: none;
        cursor: pointer;
        display: flex;
        padding: 0;
      }
      .line {
        fill: none;
        stroke: #ffffff;
        stroke-width: 6;
        transition: stroke-dasharray 600ms cubic-bezier(0.4, 0, 0.2, 1), stroke-dashoffset 600ms cubic-bezier(0.4, 0, 0.2, 1);
      }
      .line1 {
        stroke-dasharray: 60 207;
        stroke-width: 6;
      }
      .line2 {
        stroke-dasharray: 60 60;
        stroke-width: 6;
      }
      .line3 {
        stroke-dasharray: 60 207;
        stroke-width: 6;
      }
      .opened .line1 {
        stroke-dasharray: 90 207;
        stroke-dashoffset: -134;
        stroke-width: 6;
      }
      .opened .line2 {
        stroke-dasharray: 1 60;
        stroke-dashoffset: -30;
        stroke-width: 6;
      }
      .opened .line3 {
        stroke-dasharray: 90 207;
        stroke-dashoffset: -134;
        stroke-width: 6;
      }
    </style>
  </body>
</html>
