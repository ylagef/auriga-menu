---
import ButtonLink from '@components/ButtonLink.astro'
import ButtonLinksContainer from '@components/ButtonLinksContainer.astro'
import { ZoneI } from 'src/types'

export interface Props {
  zone: ZoneI
  slug: string
}

const { zone, slug } = Astro.props
---

<ButtonLinksContainer>
  {
    zone.categories
      .sort((a, z) => a.order - z.order)
      .map((category) => <ButtonLink href={`/${slug}/${category.id}`}>{category.buttonText}</ButtonLink>)
  }
</ButtonLinksContainer>
