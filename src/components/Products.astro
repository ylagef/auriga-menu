---
import type { ProductI } from '../types'
import Product from './Product.astro'

export interface Props {
  products: ProductI[]
}

const { products } = Astro.props
---

<div class="flex flex-col gap-8">
  {
    products
      .sort((a, z) => {
        return a.order - z.order
      })
      .map((product) => {
        return <Product product={product} />
      })
  }
</div>
