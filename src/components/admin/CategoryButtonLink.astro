---
import ButtonLink from '@components/ButtonLink.astro'
import { translations } from 'src/locales/translations'
import { CategorySI } from 'src/types'

import OrderCorner from './OrderCorner.astro'

export interface Props {
  category: CategorySI
}

const { category } = Astro.props
---

<ButtonLink href={`/admin/categorias/${category.slug}`}>
  <OrderCorner order={category.order} />
  <div class="flex flex-col gap-2">
    <p class="font-medium">{category.buttonText}</p>
    <div class="opacity-70 flex flex-col gap-2">
      <small class="">{translations.categoryTypes[category.type]}</small>
    </div>
  </div>
</ButtonLink>
