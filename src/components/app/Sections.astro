---
import Section from '@components/app/Section.astro'
import { SectionSI } from 'src/types'

export interface Props {
  sections: SectionSI[]
  isSubsections?: boolean
}

const { sections, isSubsections } = Astro.props
---

<div class={`flex flex-col gap-${isSubsections ? '4' : '8'}`}>
  {sections.sort((a, z) => a.order - z.order).map((section) => <Section section={section} isSubsection={isSubsections} />)}
</div>
