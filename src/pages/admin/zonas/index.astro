---
import Admin from '@components/Admin.astro'
import ButtonLink from '@components/ButtonLink.astro'
import ButtonLinksContainer from '@components/ButtonLinksContainer.astro'
import Divider from '@components/Divider.astro'
import { Input } from '@components/Input'
import LineCard from '@components/Linecard'
import ZoneForm from '@components/ZoneForm'
import { getZones, supabase } from 'src/utils/supabase'

const cookies = Astro.request.headers.get('cookie')

const token = cookies
  ?.split(';')
  .find((c) => c.trim().startsWith('sup-access-token='))
  ?.split('=')[1]

if (!token) return Astro.redirect('/admin/login')

const { data: user, error } = await supabase.auth.api.getUser(token)
if (user?.aud !== 'authenticated') return Astro.redirect('/admin/login')

const zones = await getZones({ restaurantId: 1 })
---

<Admin user={user}>
  <div class="flex flex-col gap-6">
    <LineCard client:visible label="Zonas">
      <ButtonLinksContainer>
        {zones.sort((a, b) => a.name.localeCompare(b.name)).map((zone) => <ButtonLink href={`/admin/zonas/${zone.slug}`}>{zone.name}</ButtonLink>)}
      </ButtonLinksContainer>
    </LineCard>

    <LineCard client:visible label="Crear nueva zona">
      <ZoneForm client:visible />
    </LineCard>
  </div>
</Admin>
