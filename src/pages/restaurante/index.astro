---
import SectionLink from '../../components/SectionLink.astro'
import Layout from '../../layouts/Layout.astro'
import { RESTAURANT } from '../../mock/auriga'
---

<Layout title={RESTAURANT.name}>
  <div class="flex flex-col gap-4 items-center w-fit mx-auto">
    {RESTAURANT.zones.restaurante.sections.map((section) => <SectionLink text={section.buttonText} link={`/restaurante/${section.id}`} />)}
  </div>
</Layout>
